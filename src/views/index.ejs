    <section>
        <input type="text" name="search-bar" class="search-bar" placeholder="Buscar en WorldMusic...">
    </section>

    <h2 class="text-center">Videos mas vistos por el usuario</h2>
    <section class="videos-usuario">
        <div class="apartado-canciones">
            <% for(let i=0; i < datos.length; i++) {%>
                <!--Videos que mas le gustan al usuario-->
                <!-- <video src="./video/video1.mp4" controls></video> -->
                <article>
                    <img src="../img/<%= datos[i].imagen%>" alt="" class="music-image">
                    <div class="details text-center">
                        <p><%=datos[i].cancion%></p>
                        <a href="/mon-laferte" class="acerca-cancion">Ver Más</a>
                    </div>
                </article>
            <% }%>
        </div>

        <div class="apartado-opciones">
            <h2 class="text-center">Ordenar Por</h2>
            <select name="options" class="options">
                <option value="" class="value-option">Mas Escuchad@</option>
                <option value="" class="value-option">Mas Visitad@</option>
                <option value="" class="value-option">Más Vist@</option>
                <option value="" class="value-option">Menos Vist@</option>
                <option value="" class="value-option">Más Antigu@</option>
