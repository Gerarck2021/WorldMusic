<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/estilos.css">
    <title>Modificacion de Usuarios de WorldMusic</title>
</head>

<body>
    <h1 class="text-center title">Hola!!! Bienvenid@ a <span class="world-music">WorldMusic</span></h1>

    <header>
        <!--Banner-->
        <!-- <img src="./img/foto.jpg" alt=""> -->
        <nav class="navegacion">
            <ul class="elementos-navegacion">
                <li><a href="/" class="contenido-elemento text-center">Inicio</a></li>
                <li><a href="/artistas" class="contenido-elemento text-center">Artistas</a></li>
                <li><a href="/users/iniciar-sesion" class="contenido-elemento text-center">Iniciar Sesion</a></li>
                <li><a href="" class="contenido-elemento text-center">Registro</a></li>
            </ul>
        </nav>
    </header>

    <h1 class="title text-center">Modificaci√≥n de Usuarios</h1>
    <form action="/users/registro" method="post" class="form-register">
        <label for="correo">Nombres</label>
        <input type="text" name="nombres" id="nombres" class="input-data" placeholder="Nombres Completos">

        <label for="apellidos">Apellidos</label>
        <input type="text" name="apellidos" id="apellidos" class="input-data" placeholder="Apellidos Completos">

        <label for="correo">Telefono</label>
        <input type="tel" name="telefono" id="telefono" class="input-data" placeholder="+573003000000">

        <label for="correo">Correo</label>
        <input type="email" name="email" id="email" class="input-data" placeholder="usuario@ejemplo.com">

        <label for="correo">Clave</label>
        <input type="password" name="clave" id="clave" class="input-data" placeholder="*****************">

        <label for="correo">Confirmar Clave</label>
        <input type="password" name="confirmacionclave" id="confirmacionclave" class="input-data" placeholder="*****************">

        <label for="rol">Rol</label>
        <select name="roles" id="roles" class="options-roles">
            <option value="administrador">Administrador</option>
            <option value="espectador">Espectador</option>
        </select>

        <label for="correo">Intereses</label>
        Pop<input type="checkbox" name="interes" id="interes" class="input-data" value="pop">
        Pop-Rock<input type="checkbox" name="interes" id="interes" class="input-data" value="pop-rock">
        Pop-Romantico<input type="checkbox" name="interes" id="interes" class="input-data" value="pop-romantico">
        Romantico<input type="checkbox" name="interes" id="interes" class="input-data" value="romantico">
        Rock<input type="checkbox" name="interes" id="interes" class="input-data" value="rock">
        Baladas<input type="checkbox" name="interes" id="interes" class="input-data" value="baladas">
        Salsa<input type="checkbox" name="interes" id="interes" class="input-data" value="salsa">
        Reggaeton<input type="checkbox" name="interes" id="interes" class="input-data" value="reggaeton">

        <div class="buttons">
            <input type="submit" value="Enviar" class="button">
            <input type="reset" value="Limpiar" class="button">
        </div>
    </form>

    <footer class="text-center footer-page">
